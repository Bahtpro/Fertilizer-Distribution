<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/greenback"
    tools:context=".Newuser">

    <TextView
        android:id="@+id/textViewA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Fertilizer Distribution"
        android:textColor="@color/lightgreen"
        android:textSize="40dp"
        android:textStyle="bold"
        app:fontFamily="@font/calligraffitti" />

    <ImageView
        android:id="@+id/profile_image"
        android:layout_marginTop="15dp"
        android:src="@drawable/reg"
        android:layout_gravity="center"
        android:layout_below="@+id/textViewA"
        android:layout_centerHorizontal="true"
        android:layout_width="210dp"
        android:layout_height="150dp"/>

    <EditText
        android:id="@+id/user_name"
        android:layout_gravity="center"
        android:background="@drawable/curved_view2"
        android:textSize="20dp"
        android:layout_below="@id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="First name"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_width="350dp"
        android:layout_height="45dp"/>

    <EditText
        android:id="@+id/lnml"
        android:layout_gravity="center"
        android:background="@drawable/curved_view2"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/user_name"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:hint="Last name"
        android:textColorHint="@color/white"
        android:layout_width="350dp"
        android:layout_height="45dp"/>
    <EditText
        android:id="@+id/lphone"
        android:layout_gravity="center"
        android:background="@drawable/curved_view2"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/user_name"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:hint="Phone no"
        android:textColorHint="@color/white"
        android:layout_width="350dp"
        android:layout_height="45dp"/>

    <EditText
        android:id="@+id/lemail"
        android:background="@drawable/curved_view2"
        android:textSize="20dp"
        android:layout_below="@id/lage"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:hint="Enter email"
        android:textColorHint="@color/white"
        android:inputType="textEmailAddress"
        android:layout_width="350dp"
        android:layout_height="45dp"/>

    <EditText
        android:id="@+id/lpassword"
        android:layout_gravity="center"
        android:background="@drawable/curved_view2"
        android:textSize="20dp"
        android:layout_below="@id/lemail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:hint="Enter password"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:inputType="textPassword"
        android:layout_width="350dp"
        android:layout_height="45dp"/>
    <EditText
        android:id="@+id/lconpassword"
        android:layout_gravity="center"
        android:background="@drawable/curved_view2"
        android:textSize="20dp"
        android:layout_below="@id/lemail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:hint="Confirm password"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:inputType="textPassword"
        android:layout_width="350dp"
        android:layout_height="45dp"/>

    <Button
        android:id="@+id/signup"
        android:layout_below="@id/lpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/curved_view1"
        android:text="Sign Up"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>

</LinearLayout>